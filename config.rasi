@theme "gruvbox-dark-hard"

configuration {
  modes: "pass:~/.config/rofi/custom-modes/pass.sh,pw2l:~/.config/rofi/custom-modes/pass-cp2l.sh,totp:~/.config/rofi/custom-modes/totp.sh,urls:~/.config/rofi/custom-modes/urls.sh,wind:~/.config/rofi/custom-modes/windows-gnome-dbus.sh";
}

* {
  font: "JetBrainsMono Nerd Font 13";
}

window {
  width: 30%;
  border-radius: 5px;
  border: 1px;
}

element {
  padding: 2px 2px 2px 10px;
}

entry {
  placeholder: "Search";
}

inputbar {
  padding: 4px;
}
